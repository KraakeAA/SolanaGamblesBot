{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "npm install",
    "installCommand": "npm install",
    "startCommand": "node index.js",
    "nixpacks": {
      "providers": ["node", "postgresql"]
    }
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "PGSSLMODE": "require"
      }
    }
  },
  "plugins": [
    {
      "name": "postgresql",
      "enabled": true
    }
  ],
  "checks": {
    "healthcheck": {
      "type": "http",
      "path": "/health",
      "interval": 5,
      "timeout": 2,
      "initialDelay": 5
    }
  },
  "probes": {
    "liveness": {
      "type": "http",
      "path": "/health",
      "initialDelaySeconds": 5,
      "periodSeconds": 10,
      "timeoutSeconds": 2,
      "successThreshold": 1,
      "failureThreshold": 3
    },
    "readiness": {
      "type": "http",
      "path": "/health",
      "initialDelaySeconds": 5,
      "periodSeconds": 10,
      "timeoutSeconds": 2,
