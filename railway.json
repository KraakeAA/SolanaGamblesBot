{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "startCommand": "node index.js"
  },
  "deploy": {
    "startTimeout": 28,
    "shutdownTimeout": 25,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "probes": {
      "liveness": {
        "path": "/health",
        "port": 3000,
        "initialDelaySeconds": 30,
        "timeoutSeconds": 5,
        "periodSeconds": 10,
        "successThreshold": 1,
        "failureThreshold": 3
      },
      "readiness": {
        "path": "/health",
        "port": 3000,
        "initialDelaySeconds": 30,
        "timeoutSeconds": 5,
        "periodSeconds": 10,
        "successThreshold": 1,
        "failureThreshold": 3
      }
    }
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "PG_POOL_MIN": "2",
        "PG_POOL_MAX": "10",
        "NODE_OPTIONS": "--max-old-space-size=768"
      }
    }
  },
  "services": [
    {
      "name": "solana-gambles-bot",
      "serviceType": "backend",
      "resources": {
        "memory": 1024,
        "cpu": 1000
      }
    }
  ],
  "plugins": [
    {
      "name": "postgresql",
      "enabled": true,
      "settings": {
        "max_connections": 25
      }
    }
  ],
  "lifecycle": {
    "preStop": {
      "exec": {
        "command": ["curl", "-X", "GET", "http://localhost:3000/prestop"]
      }
    },
    "terminationGracePeriodSeconds": 25
  }
}
