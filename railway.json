{
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "deploy": {
    "startCommand": "node index.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 15,
    "healthcheckMaxRetries": 2,
    "healthcheckDelay": 5
  }
}
